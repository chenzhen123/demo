<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/loading_dialog_width"
        android:layout_height="@dimen/loading_dialog_height"
        android:layout_gravity="center"
        android:background="@drawable/loading_dialog_container_bg"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout style="@style/wrap_style">

            <ImageView
                android:id="@+id/dialog_progress_iv"
                style="@style/wrap_style"
                android:layout_centerInParent="true"
                android:src="@drawable/login_icon_feijim" />

            <ImageView
                style="@style/wrap_style"
                android:layout_centerInParent="true"
                android:src="@drawable/login_icon_feijis" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_loading_dialog_content"
            style="@style/wrap_style"
            android:layout_marginTop="@dimen/loading_dialog_text_margin_top"
            android:text="@string/loading_dialog_loading"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_m" />
    </LinearLayout>
</FrameLayout>